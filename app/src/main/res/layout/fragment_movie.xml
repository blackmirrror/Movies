<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.presentation.fragments.movie.MovieFragment">

    <ImageView
        android:id="@+id/iv_movie_image"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_movie_image"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Title"/>

    <TextView
        android:id="@+id/tv_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="dewkmafkm ;askdfm;a afdek m;a skdf;a saljkfn akjfl;a s  klaedj lakjsnf askjdfn "/>

    <TextView
        android:id="@+id/tv_movie_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_description"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Жанры: бла бла бла"/>

    <TextView
        android:id="@+id/tv_movie_countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_genres"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Страны: бла бла бла"/>

    <FrameLayout
        android:id="@+id/fail_layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <include
            android:id="@+id/layout_error"
            layout="@layout/layout_error" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>